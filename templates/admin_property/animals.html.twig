{% extends "base_admin.html.twig" %}

{% block title %}{% endblock %}

{% block body %}
{% for message in app.flashes('success') %}
<div class="alert alert-success">
  {{ message }}
</div>
{% endfor %}
<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Nom</font></font></th>
        <th scope="col"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Age</font></font></th>
        <th scope="col"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Race</font></font></th>
        <th scope="col"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Action</font></font></th>
      </tr>
    </thead>
    <tbody>
      <tr class="table-active">
        {% for animal in animals %}
        <th scope="row"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{animal.name}}</font></font></th>
        <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{animal.age}}</font></font></td>
        <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{animal.race}}</font></font></td>
        <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">            
          <a class="btn btn-primary" href="{{ path('admin_edit_animals', {'id': animal.id }) }}">Editer</a>
          <form method="post" action="{{path('admin_delete_animals', {'id': animal.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes vous sûr ?')">
            <input
            name="_method" type="hidden" value="DELETE">
            {# <input type="hidden" name="_token" value="{{ csrf_token('delete' - article.id) }}"> #}
            <button class="btn btn-danger">Supprimer</button>
          </form>
        </font></font></td>
      </tr>                
      {% endfor %}
      <tr class="table-active">
        <th scope="row"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"></font></font></th>
        <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"></font></font></td>
        <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"></font></font></td>
        <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">          
            <button class="btn btn-primary" id="sucre">
            <a class="nav-link" href="{{path('admin_create_animals')}}">Créer un animal</a>
          </button></font></font></td>
      </tr>
    </tbody>
</table>
{% endblock %}